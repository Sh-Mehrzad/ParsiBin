@model IEnumerable<ParsiBin.ViewModel.AdminModel.CountryModel>

@{
    ViewBag.Title = "لیست کشورها";
}

<div class="container body-content">

    <div class="row">

        <p>
            @Html.ActionLink("ایجاد کشور جدید", "Create",null, new { @class="btn btn-info btn-sm"})
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Flag)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <img src="@Url.Content("~/Handlers/ImageHandler/ImageHandler.ashx?h=30&w=60&file=" + "~/Uploads/Country/" + Html.DisplayFor(modelItem => item.Flag))" class="img-responsive">
                    </td>
                    <td>
                        @Html.ActionLink("ویرایش", "Edit", new { id = item.ID }) |                        
                        @Html.ActionLink("حذف", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
        </div>
    </div>
