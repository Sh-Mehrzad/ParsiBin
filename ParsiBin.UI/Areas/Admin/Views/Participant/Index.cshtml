@model IEnumerable<ParsiBin.ViewModel.AdminModel.ParticipantModel>

@{
    ViewBag.Title = "تیم‌های ورزشی";
}
<div class="container body-content">

    <div class="row">
        <p>
            @Html.ActionLink("ایجاد تیم جدید", "Create", null,  new { @class = "btn btn-success btn-sm" })
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Logo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SportTypeTitle)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <img src="@Url.Content("~/Handlers/ImageHandler/ImageHandler.ashx?h=50&w=50&file=" + "~/Uploads/Participant/" + Html.DisplayFor(modelItem => item.Logo))" class="img-responsive">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SportTypeTitle)
                    </td>
                    <td>
                        @Html.ActionLink("ویرایش", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("مشخصات", "Details", new { id = item.ID }) |
                        @Html.ActionLink("حذف", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>