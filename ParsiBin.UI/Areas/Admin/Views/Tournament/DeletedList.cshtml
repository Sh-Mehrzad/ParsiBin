@model IEnumerable<ParsiBin.ViewModel.AdminModel.TournamentModel>

@{
    ViewBag.Title = "لیست تورنومنت‌های حذف شده";
}

<div class="container body-content">

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <div class="thumbnail-logo">
                        <img src="@Url.Content("~/Handlers/ImageHandler/ImageHandler.ashx?h=170&w=125&file=" + "~/Uploads/Tournament/" + Html.DisplayFor(modelItem => item.Logo))" class="img-responsive Center">
                    </div>
                    <div class="caption">
                        <h3>@Html.DisplayNameFor(model => model.Title) :<br /><br /> <a href="../Group/Index?TournamentID=@item.ID">@Html.DisplayFor(modelItem => item.Title)</a></h3>
                        @*<p>@Html.DisplayNameFor(model => model.UpdatedOn) : <br/> @if ((Html.DisplayFor(modelItem => item.UpdatedOn)).ToString() == "")
                            {
                                @Html.DisplayFor(modelItem => item.CreatedOn)
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.UpdatedOn)
                            }   </p>*@
                        <br /><br />
                        <p>
                            @Html.ActionLink("ویرایش", "Edit", new { id = item.ID }, new { @class = "btn btn-info btn-sm" })
                            @Html.ActionLink("دیدن جزئیات", "Details", new { id = item.ID }, new { @class = "btn btn-info btn-sm" })
                            @Html.ActionLink("حذف", "Delete", new { id = item.ID }, new { @class = "btn btn-info btn-sm" })
                        </p>

                    </div>
                </div>
            </div>
        }
    </div>
    <br />

    <p>
        @Html.ActionLink("لیست تورنومنت‌های فعال", "TournamentList", "Tournament", null, new { @class = "btn btn-info btn-lg" })

        @Html.ActionLink("لیست تورنومنت‌های غیر فعال شده", "DisabledList", "Tournament", null, new { @class = "btn btn-info btn-lg" })
    </p>
</div>