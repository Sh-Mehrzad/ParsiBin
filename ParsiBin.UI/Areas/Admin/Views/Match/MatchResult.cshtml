@model ParsiBin.ViewModel.AdminModel.MatchModel

@{
    ViewBag.Title = "ثبت نهایی بازی";
}

<div class="container">
    <h3>تورنومنت : @ViewBag.TournamentTitle</h3>
    <h3>گروه : @ViewBag.Group</h3>
    <h4>تیم میزبان : @ViewBag.HomeTeam</h4>
    <h4>تیم میهمان : @ViewBag.AwayTeam</h4>

    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <hr />
            @Html.HiddenFor(model => model.ID)
            <div class="form-group">
                <label class="control-label col-md-2" for="Title">تعداد گل @ViewBag.HomeTeam :</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HomeTeamGoal, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>

        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <label class="control-label col-md-2" for="Title">تعداد گل @ViewBag.AwayTeam :</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AwayTeamGoal, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ثبت نتیجه بازی" class="btn btn-primary btn-sm" />
                <a href="~/admin/Match/Index?GroupID=@ViewBag.GroupID" class="btn btn-warning btn-sm">بازگشت</a>
            </div>
        </div>

    }

    <div>

    </div>

</div>
