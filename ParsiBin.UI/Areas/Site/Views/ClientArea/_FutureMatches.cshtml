@model IEnumerable<ParsiBin.ViewModel.UserModel.FutureMatchesModel>

<li class="dropdown notifications-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-bell-o"></i>        
        <span class="label label-danger Tahoma">@ViewBag.AllMatches</span>
    </a>
    <ul class="dropdown-menu">
        <li class="header panelTitleBg">بازی‌های پیش‌رو</li>
        @foreach (var item in Model)
        {
            <li class="FutureMatches">
                <a href="@Url.Action("Predict/" + item.TournamentID, "ClientArea", new { Controller = "ClientArea" }  )">
                    <div class="row">
                        <div class="col-xs-10">
                            @item.Tournament
                        </div>
                        <div class="col-xs-2">
                            <span class="label label-danger text-left Tahoma">@item.Matches</span>
                        </div>
                    </div>
                </a>
            </li>            
        }
    </ul>
</li>