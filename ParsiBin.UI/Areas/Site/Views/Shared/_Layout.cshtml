    <script type="text/javascript">
        if ($(window).width() < 768) {            
            $('body').addClass('fixed');
        }        
        $('#WaitingMessage').fadeOut();
        $(window).scroll(function () {
            var scrolled_val = $(document).scrollTop().valueOf();
            if (scrolled_val > 20) {
                $("#sideNav").addClass("navbar-fixed-top");
            }
            else if (scrolled_val <= 20) {
                $("#sideNav").removeClass("navbar-fixed-top");
            }
        });
    </script>

